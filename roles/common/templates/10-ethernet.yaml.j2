network:
  renderer: networkd
  ethernets:
    ens18:
      match:
        macaddress: {{ adapter_mac }}
      dhcp4: false
      dhcp6: false
      addresses:
      - {{ static_ip }}/24
      routes:
        - to: 0.0.0.0/0
          via: 192.168.1.1
      nameservers:
        addresses: [1.1.1.1, 1.0.0.1]
  version: 2
